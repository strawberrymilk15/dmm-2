<table class='table table-hover table-inverse'>
  <thead>
    <tr>
      <th></th>
      <th>Title</th>
      <th>Opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
      <tr>
        <td><%= link_to(book.user) do %>
          <%= image_tag book.user.get_profile_image, size:'50x50' %>
          <% end %>
        </td>
        <td><%= link_to book.title,book, class: "book_#{book.id}" %></td>
        <td><%= book.body %></td>
        <!--いいねされているかされていないかで分岐--->
        <!--レコード一致=いいね削除--->
        <%if book.favorited?(current_user)%>
          <td>
             <%=link_to "/books/book_id/favorites/id",method: :delete do%>
              <i class="fa-solid fa-heart" style="color:red;"></i><span class="good_count1" style="color:red;"><%=book.favorites.count %></span>
             <%end%>
          </td>
          <!--レコード不一致=いいねcreate--->
          <%else%>
          <td>
             <%=link_to "/books/#{book.id}/favorites",method: :post do%>
              <i class="fa-solid fa-heart" style="color:lightgray;"></i><span class="good_count2" style="color:lightgray;"><%= book.favorites.count %></span>
             <%end%>
          </td>
       <%end%>
        <!--良いねされているかされていないかで分岐--->

        <td>コメント数：<span class="comment_count"><%=book.book_comments.count%></span></td>
        <td>閲覧数：<span class="comment_count"><%= book.browsings.count %></span></td>
      </tr>
    <% end %>
  </tbody>
</table>