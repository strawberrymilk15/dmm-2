          <% @book.book_comments.each do |bc| %>

            <%book_comment_user = bc.user%>
            <%= link_to user_path(book_comment_user), class: "bco" do %>
              <%=image_tag book_comment_user.get_profile_image,size: "50*50"%>
              <%=book_comment_user.name%>
            <%end%>

            <%=bc.comment%>
            <%if current_user == book_comment_user %>
              <%= link_to '削除',book_book_comment_path(bc.book_id, bc.id), class: "bc-d", method: :delete %>
            <% end %>

          <%end%>
          
          <%= form_with model:[@book,@book_comment],local: true do |f| %>
            <div class="form-group">
              <%= f.label :comment %>
              <%= f.text_area :comment, class: 'form-control book_title' %>
            </div>
            <div class="form-group">
              <%= f.submit :送信,class:"sub"  %>
            </div>
          <% end %>