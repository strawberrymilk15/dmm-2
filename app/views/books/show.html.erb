<div class='container'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info' %>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form',book: @new_book %>
    </div>
    <div class='col-md-8 offset-md-1'>
  		<h2>Book detail</h2>
  		<table class='table'>
  		  <tr>
          <td><%= link_to(@book.user) do %>
            <%= image_tag @book.user.get_profile_image, size:"100x100" %><br>
            <%= @book.user.name %>
            <% end %>
          </td>
          <td><%= link_to @book.title, @book %></td>
          <td><%= @book.body %></td>
          <!--いいねされているかされていないかで分岐--->
          <!--レコード一致=いいね削除--->
          <%if @book.favorited?(current_user)%>
            <td>
             <%=link_to "/books/#{@book.id}/favorites/id",method: :delete do%>
                <i class="fa-solid fa-heart" style="color:red;"></i><span class="good_count1" style="color:red;"><%=@book.favorites.count %></span>
             <%end%>
            </td>
            <!--レコード不一致=いいねcreate--->
            <%else%>
            <td>
              <%=link_to "/books/#{@book.id}/favorites",method: :post do%>
                <i class="fa-solid fa-heart" style="color:lightgray;"></i><span class="good_count2" style="color:lightgray;"><%= @book.favorites.count %></span>
              <%end%>
            </td>
          <%end%>
          <!--良いねされているかされていないかで分岐--->
          <td>コメント数：<span class="comment_count"><%= @book.book_comments.count%></span></td>
          <%if @book.user == current_user%>
            <td><%= link_to 'Edit', edit_book_path(@book.id), class: "btn btn-sm btn-success edit_book_#{@book.id}" %></td>
            <td><%= link_to 'Destroy', book_path(@book.id), method: :delete, data: { confirm: '本当に消しますか？' }, class: "btn btn-sm btn-danger destroy_book_#{@book.id}"%></td>
          <%end%>
        </tr>
        
      </table>
     <%= render 'books/commentform', book: @book,book_comment: @book_comment%>

    </div>
  </div>
</div>